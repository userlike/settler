    "babel-plugin-macros": "^2.8.0",
    "commitizen": "4.1.2",
    "cz-lerna-changelog": "2.0.3",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
